        let map;
        let markers = {};
        
        // Load saved settings from localStorage
        function loadSettings() {
            const savedSettings = localStorage.getItem('storeSettings');
            if (savedSettings) {
                const settings = JSON.parse(savedSettings);
                stores.forEach(store => {
                    const saved = settings.find(s => s.name === store.name);
                    if (saved) {
                        store.has_coverage = saved.has_coverage;
                        store.rep_name = saved.rep_name;
                    }
                });
                recalculatePriorities();
            }
        }
        
        // Save settings to localStorage
        function saveSettings() {
            const settings = stores.map(store => ({
                name: store.name,
                has_coverage: store.has_coverage,
                rep_name: store.rep_name || ''
            }));
            localStorage.setItem('storeSettings', JSON.stringify(settings));
        }
        
        // Recalculate priorities when coverage changes
        function recalculatePriorities() {
            const storesNoCoverage = stores.filter(s => !s.has_coverage && s.sales > 0);
            storesNoCoverage.sort((a, b) => b.sales - a.sales);
            
            const third = Math.ceil(storesNoCoverage.length / 3);
            
            stores.forEach(store => {
                if (store.has_coverage) {
                    store.priority = 'covered';
                } else if (store.sales === 0) {
                    store.priority = 'low';
                } else {
                    const index = storesNoCoverage.findIndex(s => s.name === store.name);
                    if (index < third) {
                        store.priority = 'high';
                    } else if (index < third * 2) {
                        store.priority = 'medium';
                    } else {
                        store.priority = 'low';
                    }
                }
            });
        }
        
        // Initialize app
        window.addEventListener('load', function() {
            loadSettings();
            initMap();
            updateStats();
            renderStoreList();
        });
        
        function initMap() {
            map = L.map('map').setView([39.5, -75.5], 8);
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '¬© OpenStreetMap contributors',
                maxZoom: 19
            }).addTo(map);
            
            createAllMarkers();
        }
        
        function getMarkerColor(store) {
            if (store.has_coverage) return '#11998e';
            switch (store.priority) {
                case 'high': return '#ee0979';
                case 'medium': return '#ff6a00';
                case 'low': return '#ffd700';
                default: return '#999';
            }
        }
        
        function getPriorityLabel(priority) {
            const labels = {
                'high': 'HIGH PRIORITY',
                'medium': 'MED PRIORITY',
                'low': 'LOW PRIORITY'
            };
            return labels[priority] || '';
        }
        
        function createMarker(store) {
            const color = getMarkerColor(store);
            const size = store.has_coverage ? 26 : 24;
            
            const icon = L.divIcon({
                className: 'custom-marker',
                html: `<div style="
                    background: ${color};
                    width: ${size}px;
                    height: ${size}px;
                    border-radius: 50%;
                    border: 3px solid white;
                    box-shadow: 0 2px 6px rgba(0,0,0,0.3);
                "></div>`,
                iconSize: [size, size],
                iconAnchor: [size/2, size/2]
            });
            
            let priorityBadge = '';
            if (!store.has_coverage && store.priority) {
                priorityBadge = `<span class="priority-badge ${store.priority}">${getPriorityLabel(store.priority)}</span>`;
            }
            
            let repInfo = '';
            if (store.has_coverage && store.rep_name) {
                repInfo = `<div class="popup-rep">üë§ ${store.rep_name}</div>`;
            }
            
            const popupContent = `
                <div class="popup-content">
                    <div class="popup-title">${store.name} ${priorityBadge}</div>
                    ${repInfo}
                    <div class="popup-sales">${store.sales > 0 ? store.sales_display : '<span class="no-sales">No sales data</span>'}</div>
                    <div class="popup-status ${store.has_coverage ? 'covered' : 'needed'}">
                        ${store.has_coverage ? '‚úì Has Coverage' : '‚ö† Recruiting Needed'}
                    </div>
                </div>
            `;
            
            const marker = L.marker([store.lat, store.lng], { icon })
                .bindPopup(popupContent)
                .addTo(map);
            
            return marker;
        }
        
        function createAllMarkers() {
            // Clear existing markers
            Object.values(markers).forEach(marker => marker.remove());
            markers = {};
            
            // Create new markers
            stores.forEach(store => {
                markers[store.name] = createMarker(store);
            });
        }
        
        function updateStats() {
            const covered = stores.filter(s => s.has_coverage).length;
            const total = stores.length;
            const needed = total - covered;
            const percent = Math.round((covered / total) * 100);
            
            document.getElementById('total-stores').textContent = total;
            document.getElementById('covered-stores').textContent = covered;
            document.getElementById('needed-stores').textContent = needed;
            document.getElementById('coverage-percent').textContent = percent + '%';
        }
        
        function renderStoreList() {
            const statusFilter = document.getElementById('status-filter').value;
            const priorityFilter = document.getElementById('priority-filter').value;
            const sortBy = document.getElementById('sort-by').value;
            const searchTerm = document.getElementById('search').value.toLowerCase();
            
            let filtered = stores.filter(store => {
                if (statusFilter === 'needed' && store.has_coverage) return false;
                if (statusFilter === 'covered' && !store.has_coverage) return false;
                if (priorityFilter !== 'all' && store.priority !== priorityFilter) return false;
                if (searchTerm && !store.name.toLowerCase().includes(searchTerm) && 
                    !store.store_code.toLowerCase().includes(searchTerm)) return false;
                return true;
            });
            
            if (sortBy === 'sales-high') {
                filtered.sort((a, b) => b.sales - a.sales);
            } else if (sortBy === 'sales-low') {
                filtered.sort((a, b) => a.sales - b.sales);
            } else if (sortBy === 'name') {
                filtered.sort((a, b) => a.name.localeCompare(b.name));
            }
            
            const storeList = document.getElementById('store-list');
            storeList.innerHTML = filtered.map(store => {
                let priorityBadge = '';
                if (!store.has_coverage && store.priority) {
                    priorityBadge = `<span class="priority-badge ${store.priority}">${getPriorityLabel(store.priority)}</span>`;
                }
                
                let repInfo = '';
                if (store.has_coverage && store.rep_name) {
                    repInfo = `<div class="store-rep">üë§ ${store.rep_name}</div>`;
                }
                
                return `
                    <div class="store-item priority-${store.priority}" data-name="${store.name}">
                        <div class="store-name">${store.name} ${priorityBadge}</div>
                        ${repInfo}
                        <div class="store-sales">${store.sales > 0 ? 'Sales: ' + store.sales_display : 'No sales data'}</div>
                        <span class="store-status ${store.has_coverage ? 'covered' : 'needed'}">
                            ${store.has_coverage ? '‚úì Covered' : '‚ö† Need Rep'}
                        </span>
                    </div>
                `;
            }).join('');
            
            document.querySelectorAll('.store-item').forEach(item => {
                item.addEventListener('click', () => {
                    const storeName = item.dataset.name;
                    const store = stores.find(s => s.name === storeName);
                    if (store && markers[storeName]) {
                        map.setView([store.lat, store.lng], 12);
                        markers[storeName].openPopup();
                    }
                });
            });
        }
        
        // Event listeners
        document.getElementById('status-filter').addEventListener('change', renderStoreList);
        document.getElementById('priority-filter').addEventListener('change', renderStoreList);
        document.getElementById('sort-by').addEventListener('change', renderStoreList);
        document.getElementById('search').addEventListener('input', renderStoreList);
        
        // Settings Modal Functions
        function openSettings() {
            document.getElementById('settingsModal').classList.add('active');
            renderSettingsList();
        }
        
        function closeSettings() {
            document.getElementById('settingsModal').classList.remove('active');
        }
        
        function renderSettingsList() {
            const searchTerm = document.getElementById('settings-search')?.value.toLowerCase() || '';
            
            let filtered = stores.filter(store => {
                if (searchTerm && !store.name.toLowerCase().includes(searchTerm) && 
                    !store.store_code.toLowerCase().includes(searchTerm)) return false;
                return true;
            });
            
            filtered.sort((a, b) => {
                if (a.has_coverage !== b.has_coverage) {
                    return a.has_coverage ? -1 : 1;
                }
                return b.sales - a.sales;
            });
            
            const settingsList = document.getElementById('settings-list');
            settingsList.innerHTML = filtered.map(store => `
                <div class="store-setting-item">
                    <div class="store-setting-header">
                        <div>
                            <div class="store-setting-name">${store.name}</div>
                            <div class="store-setting-sales">${store.sales > 0 ? store.sales_display : 'No sales data'}</div>
                        </div>
                    </div>
                    <div class="store-setting-controls">
                        <div class="coverage-toggle">
                            <label class="toggle-switch">
                                <input type="checkbox" ${store.has_coverage ? 'checked' : ''} 
                                    onchange="toggleCoverage('${store.name}')">
                                <span class="toggle-slider"></span>
                            </label>
                            <span>Has Coverage</span>
                        </div>
                        <input type="text" class="rep-input" placeholder="Rep name..." 
                            value="${store.rep_name || ''}" 
                            ${!store.has_coverage ? 'disabled' : ''}
                            oninput="updateRepName('${store.name}', this.value)"
                            id="rep-${store.name}">
                    </div>
                </div>
            `).join('');
        }
        
        function filterSettingsList() {
            renderSettingsList();
        }
        
        function toggleCoverage(storeName) {
            const store = stores.find(s => s.name === storeName);
            if (store) {
                store.has_coverage = !store.has_coverage;
                if (!store.has_coverage) {
                    store.rep_name = '';
                }
                recalculatePriorities();
                saveSettings();
                updateStats();
                createAllMarkers();
                renderStoreList();
                renderSettingsList();
            }
        }
        
        function updateRepName(storeName, repName) {
            const store = stores.find(s => s.name === storeName);
            if (store) {
                store.rep_name = repName;
                saveSettings();
                createAllMarkers();
                renderStoreList();
            }
        }
        
        function resetToDefaults() {
            if (confirm('Reset all coverage and rep assignments to defaults? This cannot be undone.')) {
                localStorage.removeItem('storeSettings');
                location.reload();
            }
        }
        
        function exportData() {
            const exportData = stores.map(store => ({
                'Store Name': store.name,
                'Store Code': store.store_code,
                'Has Coverage': store.has_coverage ? 'Yes' : 'No',
                'Rep Name': store.rep_name || '',
                'Sales': store.sales_display,
                'Priority': store.priority,
                'Latitude': store.lat,
                'Longitude': store.lng
            }));
            
            const csv = [
                Object.keys(exportData[0]).join(','),
                ...exportData.map(row => Object.values(row).map(v => `"${v}"`).join(','))
            ].join('\n');
            
            const blob = new Blob([csv], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'store_coverage_' + new Date().toISOString().split('T')[0] + '.csv';
            a.click();
            window.URL.revokeObjectURL(url);
        }
    </script>
</body>
</html>
